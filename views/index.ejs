<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="css/style.css">
    <title><%= title  %></title>
</head>
<body>
    <% if (users!="") { %>
        <table>
            <thead>
                <tr>
                    <th>Sno</th>
                    <th>Name</th>
                    <th>Eamil</th>
                    <th>Action</th>

                </tr>
            </thead>
            <tbody>
                <% users.forEach((user,index) => { %>
                      <tr>
                        <td><%= index+1  %></td>
                        <td><%= user.name  %></td>
                        <td><%= user.email %></td>
                            <td>
                                <a href="/edit/<%= user._id %>">Update</a>
                                <a  href="/delete/<%= user._id %>">Delete</a>
                            </td>
                      </tr>
                <% }) %>
            </tbody>
        </table>
    <% } else{ %>
          <h1>USER NOT FOUND</h1>
        <% } %>
      
</body>
</html>